<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:osUtilite" x:Class="osUtilite.fmSettings" 
        Title="Settings" Height="334.809" Width="300" Topmost="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" WindowStyle="None" Background="#FF383838" Loaded="Window_Loaded" MouseDown="Window_MouseDown">
    <Grid HorizontalAlignment="Right" Width="299" Margin="0,-1,0,1">
        <Button x:Name="btOk" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="Ok" Margin="26,0,28,27" Click="btOk_Click" RenderTransformOrigin="0.5,0.5" Background="#FFA2A2A2" IsDefault="True" Height="39" VerticalAlignment="Bottom" Width="245" IsCancel="True"/>
        <CheckBox x:Name="cbTransparency" Content="Use transparency: " HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="144" Checked="CheckBox_Checked" Foreground="#FFD1D1D1" Unchecked="CheckBox_Checked"/>
        <Slider x:Name="slTransparent"  HorizontalAlignment="Left" Height="41" Margin="10,62,0,0" VerticalAlignment="Top" Width="279" Maximum="0.9" Value="0.5" TickFrequency="0.1" TickPlacement="BottomRight" IsEnabled="False" LargeChange="0.1" Minimum="0.1" />
        <Grid HorizontalAlignment="Center" Width="300" Background="#FF232323" Height="27" VerticalAlignment="Top" Margin="-1,0,0,0">
            <Label x:Name="lbCaption" Content="Settings" HorizontalAlignment="Left" Margin="241,0,0,0" VerticalAlignment="Top" Width="58" Foreground="#FFA6A6A6"/>
        </Grid>
        <CheckBox x:Name="cbShowInTaskBar" Content="Show in task bar" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top" Foreground="#FFD1D1D1" Checked="cbShowInTaskBar_Checked" Unchecked="cbShowInTaskBar_Checked" />
        <CheckBox x:Name="cbTopMost" Content="Always on top" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Foreground="#FFD1D1D1" Checked="cbTopMost_Checked" Unchecked="cbTopMost_Checked" />
        <CheckBox x:Name="cbAutoHide" Content="Auto show" HorizontalAlignment="Left" Margin="10,169,0,0" VerticalAlignment="Top" Foreground="#FFD1D1D1" Checked="cbAutoHide_Checked" Unchecked="cbAutoHide_Checked"/>
        <CheckBox x:Name="cbSnap" Content="Snap to screen" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top" Foreground="#FFD1D1D1" Checked="cbSnap_Checked" Unchecked="cbSnap_Checked"/>
    </Grid>
</Window>
